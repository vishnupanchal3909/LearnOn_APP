<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:background="#F4F1F1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:text="SpaceECE"/>


    </LinearLayout>

    <TextView
        android:id="@+id/registratio"
        android:layout_width="237dp"
        android:layout_height="29dp"
        android:layout_marginTop="78dp"
        android:layout_marginLeft="77dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/registratio"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAppearance="@style/registratio"
        android:gravity="top"
        />

    <View
        android:id="@+id/ellipse_5_register"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="145dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="111dp"
        android:background="@drawable/ellipise_5_in_login" />

    <View
        android:id="@+id/ellipse_4_register"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="129dp"
        android:background="@drawable/ellipse_4_in_login" />

    <View
        android:id="@+id/ellipse_6_register"
        android:layout_width="70dp"
        android:layout_height="42dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="160dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="169dp"
        android:background="@drawable/ellipse_6_in_login" />

    <View
        android:id="@+id/logo1_1"
        android:layout_width="390dp"
        android:layout_height="415dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="215dp"
        android:background="@drawable/logo1_1_register" />

    <EditText
        android:id="@+id/rectangle_1"
        android:layout_width="327dp"
        android:layout_height="54dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="248dp"
        android:background="@drawable/rounded_edittext"
        android:elevation="4dp"
        android:gravity="center"
        android:hint="@string/enter_user_"
        android:textColor="@color/black" />


        <EditText
            android:id="@+id/rectangle_2"
            android:layout_width="327dp"
            android:layout_height="54dp"
            android:layout_marginTop="322dp"
            android:layout_marginLeft="42dp"
            android:hint="@string/enter_phone"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:textColor="@color/black"
            android:layout_alignParentTop="true"
            android:background="@drawable/rounded_edittext"
            android:elevation="4dp" />


        <EditText
            android:id="@+id/rectangle_3"
            android:layout_width="327dp"
            android:layout_height="54dp"
            android:layout_marginTop="396dp"
            android:layout_marginLeft="42dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:hint="@string/enter_email"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@drawable/rounded_edittext"
            android:elevation="4dp" />

    <EditText
        android:id="@+id/rectangle_4"
        android:layout_width="327dp"
        android:layout_height="54dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="470dp"
        android:background="@drawable/rounded_edittext"
        android:elevation="4dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:hint="@string/enter_passw" />



    <EditText
        android:id="@+id/rectangle_7"
        android:layout_width="327dp"
        android:layout_height="54dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="42dp"
        android:hint="@string/re_enter_pa"
        android:layout_marginTop="544dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:background="@drawable/rounded_edittext"
        android:elevation="4dp" />


    <TextView
        android:id="@+id/rectangle_8"
        android:layout_width="268dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="626dp"
        android:background="@drawable/rectangle_8_login_button"
        android:elevation="4dp"
        android:textAlignment="center"
        android:gravity="center"
        android:text="@string/register_si"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />


        <TextView
            android:id="@+id/back"
            android:layout_width="46dp"
            android:layout_height="26dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/back"
            android:layout_marginTop="680dp"
            android:layout_marginLeft="182dp"
            android:textAppearance="@style/back"
            android:gravity="top" />

</RelativeLayout>